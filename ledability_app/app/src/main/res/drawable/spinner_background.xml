<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EFEFEF"/> <!-- Default background color -->
            <corners android:radius="2dp"/> <!-- Rounded corners -->
            <padding android:top="6dp" android:bottom="6dp" android:left="10dp" android:right="10dp"/> <!-- Padding -->
        </shape>
    </item>
    <!-- Arrow -->
    <item android:gravity="end|center_vertical">
        <shape>
            <size android:width="16dp" android:height="16dp"/> <!-- Adjust the size of the arrow -->
            <solid android:color="@color/colorAccent"/> <!-- Arrow color -->
            <corners android:radius="2dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
